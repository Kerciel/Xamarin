<?xml version="1.0" encoding="utf-8" ?>
<ContentPage  xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lelab.Views.MenuPage"
             Title="Menu"
             >
    <ContentPage.Content>
        <StackLayout Spacing="0">
            <StackLayout HorizontalOptions="FillAndExpand"  VerticalOptions="Start" BackgroundColor="#518faa">
                <Image Aspect="AspectFit" Margin="0,30,0,20" Source="lab_logo.png" HeightRequest="100"/>
                <Label FontFamily="{StaticResource HelveticaNeue-Thin}" Margin="0,10,0,20" FontAttributes="Bold" HorizontalOptions="Center" Text="Le Lab" TextColor="White" FontSize="40"/>
            </StackLayout>
            <Image Source="lab_separator.png" Aspect="AspectFill"/>
            <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Margin="30,0,30,0">
                <Button  HorizontalOptions="FillAndExpand" Style="{StaticResource boutonLabStyle}" Margin="0,20" Text="COMPTEUR" Clicked="NavCountPage"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>